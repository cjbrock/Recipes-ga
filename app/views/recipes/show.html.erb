<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @recipe.name %>
</p>

<p>
  <b>Ingredients:</b>
  <ul>
    <% @recipe.ingredients.each do |ingredient| %>
    <li><%= link_to ingredient.name, ingredient %></li>
    <% end %>
  </ul>
</p>

<p>
  <b>Description:</b>
  <%= @recipe.description %>
</p>


<%= link_to 'Edit', edit_recipe_path(@recipe) %> |
<%= link_to 'Back', recipes_path %>
