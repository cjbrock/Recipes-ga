<%= nested_form_for(@recipe) do |f| %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% @recipe.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <%= f.fields_for :ingredients do |ingredient_form| %>
    <%= ingredient_form.label :ingredient %>
    <%= ingredient_form.text_field :ingredient %>
    <%= ingredient_form.link_to_remove "Remove this ingredient" %><br />
  <% end %>
  <p><%= f.link_to_add "Add an ingredient", :ingredients %></p>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
